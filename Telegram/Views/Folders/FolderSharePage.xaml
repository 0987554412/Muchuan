<local:HostedPage x:Class="Telegram.Views.Folders.FolderSharePage"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:local="using:Telegram.Views"
                  xmlns:controls="using:Telegram.Controls"
                  xmlns:cells="using:Telegram.Controls.Cells"
                  xmlns:common="using:Telegram.Common"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  mc:Ignorable="d">

    <Grid Background="{ThemeResource SettingsPageBackground}">
        <controls:TableListView x:Name="ScrollingHost"
                                ItemsSource="{x:Bind ViewModel.Items}"
                                SelectionMode="Multiple"
                                ChoosingItemContainer="OnChoosingItemContainer"
                                ContainerContentChanging="OnContainerContentChanging">
            <common:SelectedItemsBinder.Attached>
                <common:SelectedItemsBinder SelectedItems="{x:Bind ViewModel.SelectedItems}" />
            </common:SelectedItemsBinder.Attached>
            <ListView.Header>
                <controls:SettingsPanel IsHeader="True">
                    <controls:SettingsHeadline Source="ms-appx:///Assets/Animations/ShareFolder.tgs"
                                               Text="{x:Bind ConvertHeadline(ViewModel.Title, ViewModel.SelectedCount), Mode=OneWay}" />

                    <controls:HeaderedControl Header="{CustomResource InviteLink}">
                        <Grid Background="{ThemeResource SettingsItemBackground}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <Border Background="{ThemeResource SolidBackgroundFillColorBaseBrush}"
                                    BorderBrush="{ThemeResource TextControlElevationBorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Margin="12,12,12,8"
                                    Grid.ColumnSpan="2" />

                            <HyperlinkButton Content="{x:Bind ViewModel.InviteLink, Mode=OneWay}"
                                             HorizontalAlignment="Stretch"
                                             HorizontalContentAlignment="Left"
                                             Margin="12,12,12,8"
                                             Grid.ColumnSpan="2" />

                            <Button Content="{CustomResource CopyLink}"
                                    Style="{StaticResource AccentButtonStyle}"
                                    HorizontalAlignment="Stretch"
                                    Margin="12,4,4,12"
                                    Grid.Row="1" />
                            <Button Content="{CustomResource ShareLink}"
                                    Style="{StaticResource AccentButtonStyle}"
                                    HorizontalAlignment="Stretch"
                                    Margin="4,4,12,12"
                                    Grid.Column="1"
                                    Grid.Row="1" />
                        </Grid>
                    </controls:HeaderedControl>

                    <Grid Padding="24,0,12,0">
                        <controls:AnimatedTextBlock Text="{x:Bind ConvertSelected(ViewModel.SelectedCount), Mode=OneWay}"
                                                    TextStyle="{StaticResource BaseTextBlockStyle}"
                                                    VerticalAlignment="Bottom"
                                                    Margin="0,0,0,8" />

                        <HyperlinkButton Click="{x:Bind ViewModel.SelectAll}"
                                         HorizontalAlignment="Right">
                            <controls:AnimatedTextBlock Text="{x:Bind ConvertSelectAll(ViewModel.SelectedCount), Mode=OneWay}"
                                                        TextWrapping="WrapWholeWords"
                                                        TextAlignment="Right"
                                                        HorizontalAlignment="Right"
                                                        Foreground="{ThemeResource HyperlinkButtonForeground}" />
                        </HyperlinkButton>
                    </Grid>
                </controls:SettingsPanel>
            </ListView.Header>
            <ListView.ItemContainerStyle>
                <Style TargetType="controls:MultipleListViewItem">
                    <Setter Property="Margin"
                            Value="0" />
                    <Setter Property="Padding"
                            Value="0" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <cells:ChatShareCell SelectionStroke="{ThemeResource ContentDialogBackground}"
                                         Stroke="{ThemeResource ChatLastMessageStateBrush}"
                                         Background="{ThemeResource SettingsItemBackground}"
                                         BorderBrush="{ThemeResource SettingsItemBorderBrush}"
                                         BorderThickness="1,0,1,1"
                                         Padding="12,6" />
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.Footer>
                <Border Height="32" />
            </ListView.Footer>
        </controls:TableListView>

    </Grid>
</local:HostedPage>
