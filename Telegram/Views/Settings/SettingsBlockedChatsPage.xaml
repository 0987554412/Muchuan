<local:HostedPage x:Class="Telegram.Views.Settings.SettingsBlockedChatsPage"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:local="using:Telegram.Views"
                  xmlns:controls="using:Telegram.Controls"
                  xmlns:cells="using:Telegram.Controls.Cells"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  mc:Ignorable="d">

    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition>
                <SlideNavigationTransitionInfo Effect="FromRight" />
            </NavigationThemeTransition>
        </TransitionCollection>
    </Page.Transitions>

    <Grid Background="{ThemeResource SettingsPageBackground}">
        <controls:TableListView x:Name="ScrollingHost"
                                ItemsSource="{x:Bind ViewModel.Items}"
                                ItemClick="ListView_ItemClick"
                                IsItemClickEnabled="True"
                                ChoosingItemContainer="OnChoosingItemContainer"
                                ContainerContentChanging="OnContainerContentChanging"
                                SelectionMode="None">
            <ListView.Header>
                <controls:SettingsPanel>
                    <Grid Margin="24,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition MaxWidth="1000" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <controls:LottieView Source="ms-appx:///Assets/Animations/BlockedChats.tgs"
                                             IsLoopingEnabled="False"
                                             IsCachingEnabled="False"
                                             Width="140"
                                             Height="140"
                                             Margin="0,16,0,0" />
                    </Grid>

                    <controls:HeaderedControl>
                        <controls:BadgeButton Content="{CustomResource BlockUser}"
                                              Click="{x:Bind ViewModel.Block}"
                                              Style="{StaticResource GlyphBadgeButtonStyle}"
                                              Glyph="&#xE98B;" />
                    </controls:HeaderedControl>
                </controls:SettingsPanel>
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <cells:UserCell BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    Background="{ThemeResource SettingsItemBackground}" />
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.Footer>
                <TextBlock Text="{CustomResource UnblockText}"
                           Style="{StaticResource InfoCaptionTextBlockStyle}"
                           Margin="24,8,24,36" />
            </ListView.Footer>
        </controls:TableListView>
    </Grid>
</local:HostedPage>
