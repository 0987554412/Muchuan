<controls:ContentPopup x:Class="Telegram.Views.Calls.Popups.VideoChatAliasesPopup"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:local="using:Telegram.Views.Popups"
                       xmlns:cells="using:Telegram.Controls.Cells"
                       xmlns:controls="using:Telegram.Controls"
                       xmlns:common="using:Telegram.Common"
                       xmlns:selectors="using:Telegram.Selectors"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       mc:Ignorable="d"
                       IsDismissButtonVisible="True">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="MessageLabel"
                   Margin="0,0,0,8"
                   Style="{StaticResource BodyTextBlockStyle}" />

        <ListView x:Name="ScrollingHost"
                  SelectionMode="Single"
                  SelectionChanged="OnSelectionChanged"
                  ChoosingItemContainer="OnChoosingItemContainer"
                  ContainerContentChanging="OnContainerContentChanging"
                  Margin="-12,0,-12,8"
                  Grid.Row="1">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <cells:ChatShareCell SelectionStroke="{ThemeResource ContentDialogBackground}"
                                         Stroke="{ThemeResource ChatLastMessageStateBrush}" />
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="CornerRadius"
                            Value="{ThemeResource ControlCornerRadius}" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemContainerTransitions>
                <TransitionCollection />
            </ListView.ItemContainerTransitions>
        </ListView>

        <controls:SettingsFooter x:Name="StartWith"
                                 IsLink="True"
                                 Text="{CustomResource VoipChatStreamWithAnotherApp}"
                                 Click="StartWith_Click"
                                 Margin="0"
                                 Grid.Row="2" />

        <controls:BadgeButton x:Name="Start"
                              Click="Start_Click"
                              Style="{StaticResource AccentButtonStyle}"
                              HorizontalAlignment="Stretch"
                              HorizontalContentAlignment="Center"
                              FontWeight="SemiBold"
                              Padding="16,3,16,5"
                              CornerRadius="4"
                              BorderThickness="1"
                              Height="32"
                              Margin="0,8,0,0"
                              Grid.Row="3" />

        <Button x:Name="Schedule"
                Click="Schedule_Click"
                Style="{StaticResource AccentTextButtonStyle}"
                HorizontalAlignment="Stretch"
                FontWeight="SemiBold"
                Margin="0,8,0,-12"
                Visibility="Collapsed"
                Grid.Row="4" />

    </Grid>
</controls:ContentPopup>
