<Page
    x:Class="Unigram.Views.Wallet.WalletReceivePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Unigram.Views.Wallet"
    xmlns:controls="using:Unigram.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xaml="using:Microsoft.Graphics.Canvas.UI.Xaml"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <controls:PageHeader
            Text="{CustomResource WalletCreateInvoiceTitle}"/>

        <ScrollViewer
            VerticalScrollBarVisibility="Auto"
            VerticalScrollMode="Auto"
            Grid.Row="1">

            <StackPanel>
                <xaml:CanvasControl
                    x:Name="Canvas"
                    CreateResources="OnCreateResources"
                    Draw="OnDraw"
                    Width="256"
                    Height="256"/>
                
                <controls:BadgeButton
                    Command="{x:Bind ViewModel.CopyCommand}"
                    Content="{CustomResource WalletCopyAddress}"/>
                <controls:BadgeButton
                    Command="{x:Bind ViewModel.ShareCommand}"
                    Content="{CustomResource WalletShareAddress}"/>
            </StackPanel>
            
        </ScrollViewer>
    </Grid>
</Page>
